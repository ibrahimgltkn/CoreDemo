@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-control">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" />
            <label class="form-check-lable" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
    <div class="form-control">
        <button class="btn btn-outline-info">Değişiklikleri Kaydet</button>
    </div>
</form>

<div class="form-control">
    <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-primary">Kullanıcı Listesine Dön</a>
</div>

