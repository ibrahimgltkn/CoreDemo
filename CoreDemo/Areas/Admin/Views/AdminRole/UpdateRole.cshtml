@using CoreDemo.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Role Düzenleme Sayfası</h1>

<form method="post">
    <div class="form-control">
        <label class="form-label">Role ID</label>
        <input type="text" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-control">
        <label class="form-label">Role Başlığı</label>
        <input type="text" name="name" value="@Model.name" class="form-control" />
    </div>
    <div class="form-control">
        <button class="btn btn-outline-success">Rolü Güncelle</button>
    </div>
</form>